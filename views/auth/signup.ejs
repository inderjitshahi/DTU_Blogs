<%- include('../includes/head.ejs') %>

    </head>

    <body>
        <%- include('../includes/nav.ejs',{user:null}) %>
            <form class="min-h-[85vh]  grid place-items-center" method="POST" action="/signup">
                <ul class="w-full md:w-1/2 flex flex-col gap-5 px-2">
                    <% errors.forEach((error,i)=>{ %>
                        <p class="text-center text-red-500 font-semibold">
                            <%=error.msg%>
                        </p>
                        <%})%>
                        <li class="flex flex-col space-y-2">
                            <label for="name">Name</label>
                            <!-- Name attribute is must to apply -->
                            <input type="text" name="name" id="name" class="border-2 py-2 px-3 rounded-sm">
                        </li>
                            <li class="flex flex-col space-y-2">
                                <label for="email">Email</label>
                                <!-- Name attribute is must to apply -->
                                <input type="email" name="email" id="email" class="border-2 py-2 px-3 rounded-sm">
                            </li>
                            <li class="flex flex-col space-y-2">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password"
                                    class="border-2 py-2 px-3 rounded-sm">
                            </li>
                            <li class="flex flex-col space-y-2">
                                <label for="confirm_password">Confirm Password</label>
                                <input type="password" name="confirm_password" id="confirm_password"
                                    class="border-2 py-2 px-3 rounded-sm">
                            </li>
                            <button type="submit"
                                class="bg-blue-500 py-1 uppercase text-white font-semibold">Sign Up</button>
                </ul>
            </form>
    </body>
    </html>