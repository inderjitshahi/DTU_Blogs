<%- include('includes/head.ejs') %>

    </head>

    <body>
        <%- include('includes/nav.ejs',{user:user}) %>
            <div class="grid grid-cols-2 place-items-center mt-16 gap-10">
                <% posts.forEach((post,i)=>{ %>
                    <div class="border-b-2 w-[30vw] min-h-[20vh] flex items-center justify-between">
                        <div class="flex flex-col justify-between items-end gap-5">
                            <div>
                                <p class="text-xl uppercase">
                                    <%= post.title.substring(0,12) %>
                                </p>
                                <p class="text-gray-400 text-sm">
                                    <%= post.description.substring(0,17) %>...
                                </p>
                            </div>
                            <div class="flex gap-10">
                                <form action="likes/<%= post.id %>" method="post">
                                    <div class=" cursor-pointer">
                                        <button type="submit" class="flex items-center gap-1">
                                            <%= post.likes.length %> <img src="/like_icon.svg" height="14" width="14">
                                        </button>
                                    </div>
                                </form>
                                <form action="posts/delete/<%= post.id %>" method="post">
                                    <div class="h-5 w-5 cursor-pointer">
                                        <button type="submit">
                                            <img src="/delete.png">
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <form action="posts/<%=post.id%>" method="get">
                            <div class="w-64 h-full">
                                <button type="submit">
                                    <img src="/blogging.svg" class="cursor-pointer">
                                </button>
                            </div>
                        </form>
                    </div>
                    <%})%>
            </div>
    </body>

    </html>